doctype html
html(lang="fa-IR", dir="rtl")
	head
		include includes/_head.pug
		title قفل | ولی

	body
		section.material-half-bg
			.cover
				
		section.lockscreen-content
			.logo
				h1 ولی

			.lock-box
				img.rounded-circle.user-image(src="https://s3.amazonaws.com/uifaces/faces/twitter/jsa/128.jpg")

				h4.text-center.user-name علی محمدی

				p.text-center.text-muted کاربری قفل شد

				form.unlock-form(action="index.html")
					.form-group
						label.control-label کلمه عبور
						input.form-control(type="password", placeholder="کلمه عبور", autofocus)

					.form-group.btn-container
							button.btn.btn-primary.btn-block(type="submit")
								i.fa.fa-unlock.fa-lg
								| بازش کن 

				p
					a(href="page-login.html") علی محمدی نیستی؟ اینجا وارد شد.

		include includes/_javascript.pug
